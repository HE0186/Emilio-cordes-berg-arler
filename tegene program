float thiccnes = 10;

void setup(){
  size(600,600);
  background(255,255,255);
}
void draw(){
  if (keyPressed) {
    if (key == ',' && thiccnes > 1 ) {
      thiccnes--;
    }
  }
    if (keyPressed) {
    if (key == '.' && thiccnes < 100 ) {
      thiccnes++;
    }
  }
   if (keyPressed) {
    if (key == ' ') {
      background(255,255,255);
    }
  }
}
  
  
  
void mouseDragged() {
  strokeWeight(thiccnes);  
  line(mouseX, mouseY, pmouseX, pmouseY);
  
}
